package entities;

public class pessoaFisica extends anualIncome {

	private Double rendanual;
	private Double gastoSaude;

	public pessoaFisica() {
	}

	public pessoaFisica(Double rendanual, Double gastoSaude) {
		super();
		this.rendanual = rendanual;
		this.gastoSaude = gastoSaude;
	}

	public Double getRendanual() {
		return rendanual;
	}

	public void setRendanual(Double rendanual) {
		this.rendanual = rendanual;
	}

	public Double getGastoSaude() {
		return gastoSaude;
	}

	public void setGastoSaude(Double gastoSaude) {
		this.gastoSaude = gastoSaude;
	}

	@Override
	public Double calc() {
		if (rendanual < 20.000) {
			return rendanual * 0.15;
		} else {
			return rendanual * 0.25 + gastoSaude * 0.5;
		}
	}

}
