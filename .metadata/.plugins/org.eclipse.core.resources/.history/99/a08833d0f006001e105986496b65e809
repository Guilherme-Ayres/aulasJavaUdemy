package Program;

import java.util.ArrayList;
import java.util.List;
import java.util.Locale;
import java.util.Scanner;

import entities.anualIncome;
import entities.pessoaFisica;
import entities.pessoaJuridica;

public class Main {

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		List<anualIncome> list = new ArrayList<>();

		System.out.print("Enter the number of tax payers: ");
		int n = sc.nextInt();
		for (int i = 1; i <= n; i++) {
			System.out.println("Tax payers #" + i + " data: ");
			System.out.print("Individual of company (i/c)? ");
			char ch = sc.next().charAt(0);
			sc.nextLine();
			System.out.print("Name: ");
			String name = sc.nextLine();
			System.out.print("Anual Income: ");
			double anualIncome = sc.nextDouble();
			if (ch == 'i') {
				System.out.print("Health expenditures: ");
				double gastoSaude = sc.nextDouble();
				System.out.println();

				list.add(new pessoaFisica(name, anualIncome, gastoSaude));
			} else {
				System.out.print("Number of employees: ");
				Integer employee = sc.nextInt();
				System.out.println();

				list.add(new pessoaJuridica(name, anualIncome, employee));
			}
		}
		System.out.println();
		System.out.println("Taxes paid: ");
		for (anualIncome a : list) {
			System.out.printf("%s: $ %.3f%n", a.getName(), a.calc());
		}

		sc.close();

	}

}
